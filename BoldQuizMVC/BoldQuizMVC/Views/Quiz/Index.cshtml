@model List<Models.Question>
@{
    
    Layout = null;
}


@* For every question, it will show up the main question and then the and responsible answers as well. *@
@foreach (var item in Model)
{
<div>
    <strong>@item.Title </strong>
    <ul style="list-style: none;">
       @foreach (var answer in item.Answers)
       {
        <li><input type="radio" name=" @item.ID" value="@answer.AnswerText"  />@answer.AnswerText </li>
           
       }
        </ul >






</div>

}

